{
  "manifest_version": 2,

  "name": "Intercom Disable Tag Button",
  "description": "This extension disables de tag button on Intercom to avoid mistakes.",
  "version": "3.0",

  "browser_action": {
    "default_icon": {
      "16": "icon_16.png",
      "32": "icon_32.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "https://app.intercom.com/*",
    "tabs"
  ]
}